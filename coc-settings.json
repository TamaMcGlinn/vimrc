
{
  "languageserver": {
    "Ada": {
      "command": "ada_language_server",
      "rootPatterns": ["*.gpr"],
      "args": [],
      "filetypes": ["ada"],
      "initializationOptions": {
      }
    },
    "clangd": {
      "command": "clangd",
      "args": [],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
      }
    },
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio"],
      "filetypes": [ "sh" ],
      "initializationOptions": {
        "linters": {
          "shellcheck": {
            "command": "shellcheck",
            "debounce": 100,
            "args": [ "--format=gcc", "-"],
            "offsetLine": 0,
            "offsetColumn": 0,
            "sourceName": "shellcheck",
            "formatLines": 1,
            "formatPattern": [
              "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
              {
                "line": 1,
                "column": 2,
                "message": 4,
                "security": 3
              }
            ],
            "securities": {
              "error": "error",
              "warning": "warning",
              "note": "info"
            }
          }
        },
        "formatters": {
          //"dartfmt": {
            //"command": "dartfmt",
            //"args": [ "--fix" ]
          //}
        },
        "filetypes": {
          "sh": "shellcheck"
        },
        "formatFiletypes": {
          // "dart": "dartfmt"
        }
      }
    },
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },

  "diagnostic.enable": true,
  "diagnostic.displayByAle": true,

  "python.linting.enabled": true,
  "python.formatting.provider": "black",

  "python.linting.pylintArgs": ["--rcfile", "~/.pylintrc"],
  "python.linting.pylintUseMinimalCheckers": false,
  "python.linting.pylintPath": "pylint",

  "coc.preferences.formatOnSaveFiletypes": ["*.py"],

  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.linting.pylintEnabled": true,

  "clangd.enabled": true,
  "clangd.arguments": ["-Xclang", "-std=c++20", "--clang-tidy", "--all-scopes-completion", "--header-insertion=iwyu", "--recovery-ast"],
  "clangd.checkUpdates": false,
  "clangd.disableDiagnostics": false,
  "clangd.disableSnippetCompletion": false,
  "clangd.compilationDatabasePath": "",
  "clangd.fallbackFlags": [],
  "clangd.path": "clangd",
  "clangd.semanticHighlighting": false,
  "clangd.serverCompletionRanking": true

}

